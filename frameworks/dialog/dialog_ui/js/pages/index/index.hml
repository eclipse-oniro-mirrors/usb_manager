<div class="container">
    <grid-container class="usb-dialog" columns="2" gutter="0px" align-items="center" justify-content="center">
        <grid-row justify-content="center" align-items="center" class="center">
            <grid-col span="2" justify-content="center" align-items="center" class="center">
                <text class="title-bar">{{ prompt }}</text>
            </grid-col>
        </grid-row>
        <grid-row justify-content="center" align-items="center" class="center">
            <grid-col xs="0" sm="1" md="1" lg="1" justify-content="center" align-items="center" class="center">
                <div class="btn-inner">
                    <button class="btn" onclick="onAllow">
                        {{ allowButton }}
                    </button>
                </div>
            </grid-col>
            <grid-col span="0">
                <div class="split"></div>
            </grid-col>
            <grid-col xs="0" sm="1" md="1" lg="1" justify-content="center" align-items="center" class="center">
                <div class="btn-inner">
                    <button class="btn" onclick="onNotAllow">
                        {{ notAllowButton }}
                    </button>
                </div>
            </grid-col>
        </grid-row>
    </grid-container>
</div>
